#include<iostream.h>
#include<conio.h>

int main()	{
	int n;
	int *ptr;
	cout << "Nhap so phan tu: " ;
	cin >> n;
	ptr = new	int;
	if (ptr != NULL) {
		for (int i = 0; i < n; i++)
			*(ptr + i) = i;
		for (int i = n; i > 0; i--)
			cout << *(ptr + (i-1)) <<"\t";
		delete ptr;
		return 0;
		
	}
	else	{
		cout << "\n khong du bo nho de cap nhat" << endl;
		return 1;
	}
}
	
